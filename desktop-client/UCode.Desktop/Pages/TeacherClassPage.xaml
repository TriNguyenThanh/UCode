                                                        <TextBlock FontSize="13" Foreground="#333">
                                                            <Run Text="{Binding EndTime, StringFormat='dd/MM/yyyy', TargetNullValue='KhÃ´ng giá»›i háº¡n'}"/>
                                                        </TextBlock>
                                                        <TextBlock FontSize="11" Foreground="#666">
                                                            <Run Text="{Binding EndTime, StringFormat='CÃ²n {0:dd} ngÃ y', TargetNullValue=''}"/>
                                                        </TextBlock>
                                                    </StackPanel>

                                                    <!-- Sá»‘ bÃ i -->
                                                    <TextBlock Grid.Column="2" FontSize="13" Foreground="#333"
                                                               Padding="20,15" VerticalAlignment="Center">
                                                        <Run Text="{Binding TotalProblems}"/>
                                                        <Run Text=" bÃ i"/>
                                                    </TextBlock>

                                                    <!-- Tráº¡ng thÃ¡i -->
                                                    <Border Grid.Column="3" 
                                                            Background="{Binding Status, Converter={StaticResource AssignmentStatusToColorConverter}}"
                                                            CornerRadius="20" Padding="15,8" Margin="20,10"
                                                            HorizontalAlignment="Left" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Status, Converter={StaticResource AssignmentStatusConverter}}" 
                                                                   Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                                                    </Border>

                                                    <!-- Thao tÃ¡c -->
                                                    <StackPanel Grid.Column="4" Orientation="Horizontal" 
                                                                VerticalAlignment="Center" Margin="10">
                                                        <Button Content="âœ" ToolTip="Chá»‰nh sá»­a"
                                                                Background="Transparent" BorderThickness="0"
                                                                Foreground="#00275e" FontSize="16" 
                                                                Padding="8" Margin="0,0,5,0" Cursor="Hand"
                                                                Command="{Binding DataContext.ViewAssignmentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                CommandParameter="{Binding AssignmentId}"/>
                                                        <Button Content="ðŸ—‘" ToolTip="XÃ³a"
                                                                Background="Transparent" BorderThickness="0"
                                                                Foreground="#dc3545" FontSize="16" 
                                                                Padding="8" Cursor="Hand"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</UserControl>
