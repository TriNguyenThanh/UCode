<UserControl x:Class="UCode.Desktop.Pages.ProblemEditPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:UCode.Desktop.Controls"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#f5f5f7">

    <Grid>
        <!-- Loading Overlay -->
        <Grid Background="#80000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" 
              Panel.ZIndex="1000">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="#FACB01"/>
                <TextBlock Text="ƒêang t·∫£i..." Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0,15,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Margin="40,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title and Back Button -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Ch·ªânh s·ª≠a b√†i to√°n" FontSize="28" FontWeight="Bold" Foreground="#191970" Margin="0,0,0,5"/>
                        <TextBlock FontSize="14" Foreground="#86868b">
                            <Run Text="ID: "/>
                            <Run Text="{Binding ProblemId}"/>
                            <Run Text=" ‚Ä¢ Code: "/>
                            <Run Text="{Binding Code}"/>
                        </TextBlock>
                    </StackPanel>

                    <Button Grid.Column="1" VerticalAlignment="Top" Padding="15,10" BorderBrush="#d2d2d7"
                            BorderThickness="1" Background="White" Foreground="#1d1d1f"
                            Command="{Binding BackCommand}" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#f5f5f7"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="‚úï" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="QUAY L·∫†I" FontSize="13" FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- Badges -->
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <!-- Difficulty Badge -->
                    <Border CornerRadius="12" Padding="12,5" Margin="0,0,8,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Difficulty}" Value="EASY">
                                        <Setter Property="Background" Value="#34C759"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Difficulty}" Value="MEDIUM">
                                        <Setter Property="Background" Value="#FF9500"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Difficulty}" Value="HARD">
                                        <Setter Property="Background" Value="#FF3B30"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="{Binding Difficulty}" Foreground="White" FontWeight="Bold" FontSize="11"/>
                    </Border>

                    <!-- Visibility Badge -->
                    <Border CornerRadius="12" Padding="12,5" Margin="0,0,8,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#e0e0e0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Visibility}" Value="PUBLIC">
                                        <Setter Property="Background" Value="#34C759"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="{Binding Visibility}" Foreground="White" FontWeight="SemiBold" FontSize="11"/>
                    </Border>

                    <!-- Status Badge -->
                    <Border CornerRadius="12" Padding="12,5">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#e0e0e0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Status}" Value="PUBLISHED">
                                        <Setter Property="Background" Value="#007AFF"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="DRAFT">
                                        <Setter Property="Background" Value="#FF9500"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="{Binding Status}" Foreground="White" FontWeight="SemiBold" FontSize="11"/>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Paper/Card with Tabs -->
            <Border Grid.Row="1" Background="White" BorderBrush="#d2d2d7" BorderThickness="1" CornerRadius="12">
                <TabControl SelectedIndex="{Binding SelectedTabIndex}" Background="Transparent" BorderThickness="0" Padding="0">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="Medium"/>
                            <Setter Property="Padding" Value="20,15"/>
                            <Setter Property="Foreground" Value="#86868b"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Grid>
                                            <Border x:Name="Border" Background="Transparent" BorderThickness="0,0,0,3" BorderBrush="Transparent" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter x:Name="ContentSite" ContentSource="Header" 
                                                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="BorderBrush" Value="#FACB01"/>
                                                <Setter Property="Foreground" Value="#1d1d1f"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="#1d1d1f"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>

                <!-- Tab 0: Basic Info -->
                <TabItem Header="Th√¥ng tin c∆° b·∫£n">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="30">
                        <StackPanel>
                            <!-- Title -->
                            <TextBlock Text="T√™n b√†i to√°n *" FontSize="14" FontWeight="SemiBold" Foreground="#1d1d1f" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                                     Height="40" FontSize="14" Padding="10"
                                     BorderBrush="#d2d2d7" BorderThickness="1"
                                     Margin="0,0,0,20"/>

                            <!-- Code -->
                            <TextBlock Text="Code (M√£ b√†i to√°n)" FontSize="14" FontWeight="SemiBold" Foreground="#1d1d1f" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Code, UpdateSourceTrigger=PropertyChanged}"
                                     Height="40" FontSize="14" Padding="10"
                                     BorderBrush="#d2d2d7" BorderThickness="1"
                                     Margin="0,0,0,5"/>
                            <TextBlock Text="Code d√πng ƒë·ªÉ ƒë·ªãnh danh b√†i to√°n, n·∫øu ƒë·ªÉ tr·ªëng s·∫Ω t·ª± ƒë·ªông t·∫°o t·ª´ title" 
                                       FontSize="12" Foreground="#86868b" Margin="0,5,0,20"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Difficulty -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="ƒê·ªô kh√≥" FontSize="14" FontWeight="SemiBold" Foreground="#1d1d1f" Margin="0,0,0,8"/>
                                    <ComboBox ItemsSource="{Binding Difficulties}"
                                              SelectedItem="{Binding Difficulty}"
                                              Height="40" FontSize="14"
                                              BorderBrush="#d2d2d7" BorderThickness="1"/>
                                </StackPanel>

                                <!-- Status -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Tr·∫°ng th√°i" FontSize="14" FontWeight="SemiBold" Foreground="#1d1d1f" Margin="0,0,0,8"/>
                                    <ComboBox ItemsSource="{Binding Statuses}"
                                              SelectedItem="{Binding Status}"
                                              Height="40" FontSize="14"
                                              BorderBrush="#d2d2d7" BorderThickness="1"/>
                                </StackPanel>

                                <!-- Visibility -->
                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Hi·ªÉn th·ªã" FontSize="14" FontWeight="SemiBold" Foreground="#1d1d1f" Margin="0,0,0,8"/>
                                    <ComboBox ItemsSource="{Binding Visibilities}"
                                              SelectedItem="{Binding Visibility}"
                                              Height="40" FontSize="14"
                                              BorderBrush="#d2d2d7" BorderThickness="1"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Tab 1: Content -->
                <TabItem Header="N·ªôi dung b√†i to√°n">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="30">
                        <StackPanel>
                            <!-- Statement -->
                            <TextBlock Text="ƒê·ªÅ b√†i" FontSize="14" FontWeight="SemiBold" Foreground="#191970" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding Statement, UpdateSourceTrigger=PropertyChanged}"
                                     Height="200" FontSize="14" Padding="10" TextWrapping="Wrap"
                                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20"/>

                            <!-- Input Format -->
                            <TextBlock Text="Input Format" FontSize="14" FontWeight="SemiBold" Foreground="#191970" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding InputFormat, UpdateSourceTrigger=PropertyChanged}"
                                     Height="80" FontSize="14" Padding="10" TextWrapping="Wrap"
                                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20"/>

                            <!-- Output Format -->
                            <TextBlock Text="Output Format" FontSize="14" FontWeight="SemiBold" Foreground="#191970" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding OutputFormat, UpdateSourceTrigger=PropertyChanged}"
                                     Height="80" FontSize="14" Padding="10" TextWrapping="Wrap"
                                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20"/>

                            <!-- Constraints -->
                            <TextBlock Text="Constraints (R√†ng bu·ªôc)" FontSize="14" FontWeight="SemiBold" Foreground="#191970" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding Constraints, UpdateSourceTrigger=PropertyChanged}"
                                     Height="100" FontSize="14" Padding="10" TextWrapping="Wrap"
                                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20"/>

                            <!-- Solution -->
                            <TextBlock Text="Solution (L·ªùi gi·∫£i)" FontSize="14" FontWeight="SemiBold" Foreground="#191970" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding Solution, UpdateSourceTrigger=PropertyChanged}"
                                     Height="200" FontSize="14" Padding="10" TextWrapping="Wrap"
                                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Tab 2: Limits -->
                <TabItem Header="Gi·ªõi h·∫°n &amp; C·∫•u h√¨nh">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="30">
                        <StackPanel>
                            <TextBlock Text="Gi·ªõi h·∫°n t√†i nguy√™n" FontSize="18" FontWeight="Bold" Foreground="#191970" Margin="0,0,0,20"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Time Limit -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Time Limit (ms)" FontSize="14" FontWeight="SemiBold" Foreground="#1d1d1f" Margin="0,0,0,8"/>
                                    <Grid>
                                        <TextBox Text="{Binding TimeLimitMs, UpdateSourceTrigger=PropertyChanged}"
                                                 Height="40" FontSize="14" Padding="10,10,50,10"
                                                 BorderBrush="#d2d2d7" BorderThickness="1"/>
                                        <TextBlock Text="ms" FontSize="14" Foreground="#86868b" 
                                                   VerticalAlignment="Center" HorizontalAlignment="Right" 
                                                   Margin="0,0,15,0" IsHitTestVisible="False"/>
                                    </Grid>
                                </StackPanel>

                                <!-- Memory Limit -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Memory Limit (KB)" FontSize="14" FontWeight="SemiBold" Foreground="#1d1d1f" Margin="0,0,0,8"/>
                                    <Grid>
                                        <TextBox Text="{Binding MemoryLimitKb, UpdateSourceTrigger=PropertyChanged}"
                                                 Height="40" FontSize="14" Padding="10,10,50,10"
                                                 BorderBrush="#d2d2d7" BorderThickness="1"/>
                                        <TextBlock Text="KB" FontSize="14" Foreground="#86868b" 
                                                   VerticalAlignment="Center" HorizontalAlignment="Right" 
                                                   Margin="0,0,15,0" IsHitTestVisible="False"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>

                            <!-- I/O Mode -->
                            <TextBlock Text="I/O Mode" FontSize="14" FontWeight="SemiBold" Foreground="#1d1d1f" Margin="0,20,0,8"/>
                            <ComboBox ItemsSource="{Binding IoModes}"
                                      SelectedItem="{Binding IoMode}"
                                      Height="40" FontSize="14" 
                                      BorderBrush="#d2d2d7" BorderThickness="1"
                                      Margin="0,0,0,20"/>

                            <Border Background="#E8F4FD" BorderBrush="#0066CC" BorderThickness="1" CornerRadius="6" Padding="15" Margin="0,10,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="‚ÑπÔ∏è" Foreground="#0066CC" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Top"/>
                                    <TextBlock TextWrapping="Wrap" Foreground="#1d1d1f" FontSize="13" LineHeight="20">
                                        Time limit √°p d·ª•ng cho m·ªói test case. Memory limit √°p d·ª•ng cho to√†n b·ªô qu√° tr√¨nh ch·∫°y.
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Tab 3: Languages -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Ng√¥n ng·ªØ ("/>
                            <TextBlock Text="{Binding ProblemLanguages.Count}"/>
                            <TextBlock Text=")"/>
                        </StackPanel>
                    </TabItem.Header>
                    <controls:LanguageManagementControl DataContext="{Binding}"/>
                </TabItem>

                <!-- Tab 4: Test Cases -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Test Cases ("/>
                            <TextBlock Text="{Binding Datasets.Count}"/>
                            <TextBlock Text=")"/>
                        </StackPanel>
                    </TabItem.Header>
                    <controls:DatasetManagementControl DataContext="{Binding}"/>
                </TabItem>

                <!-- Tab 5: Tags -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Tags ("/>
                            <TextBlock Text="{Binding CurrentTags.Count}"/>
                            <TextBlock Text=")"/>
                        </StackPanel>
                    </TabItem.Header>
                    <controls:TagManagementControl DataContext="{Binding}"/>
                </TabItem>
            </TabControl>
            </Border>

            <!-- Actions -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Button HorizontalAlignment="Right" Padding="30,12" Background="#FACB01" BorderThickness="0"
                        Foreground="White" FontWeight="SemiBold" FontSize="15" Cursor="Hand"
                        Command="{Binding SaveCommand}"
                        IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBooleanConverter}}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0077ed"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#d2d2d7"/>
                                    <Setter Property="Foreground" Value="#86868b"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="üíæ" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center" 
                                   Visibility="{Binding IsSaving, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                        <ProgressBar Width="16" Height="16" Margin="0,0,8,0" IsIndeterminate="True" 
                                     Visibility="{Binding IsSaving, Converter={StaticResource BooleanToVisibilityConverter}}"
                                     Foreground="White"/>
                        <TextBlock VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="L∆ØU THAY ƒê·ªîI"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSaving}" Value="True">
                                            <Setter Property="Text" Value="ƒêang l∆∞u..."/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>

        <!-- Saving Overlay -->
        <Grid Background="#80000000" 
              Visibility="{Binding IsSaving, Converter={StaticResource BooleanToVisibilityConverter}}" 
              Panel.ZIndex="999">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="#FACB01"/>
                <TextBlock Text="ƒêang l∆∞u..." Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0,15,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
