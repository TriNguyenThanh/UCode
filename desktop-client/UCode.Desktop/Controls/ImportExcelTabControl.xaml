<UserControl x:Class="UCode.Desktop.Controls.ImportExcelTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Description -->
        <TextBlock Grid.Row="0" Text="Import sinh viên từ file Excel. Tải xuống file mẫu để bắt đầu." 
                   Foreground="#666" FontSize="14" Margin="0,0,0,15"/>

        <!-- Stepper -->
        <Grid Grid.Row="1" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Step 1 -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Grid Width="40" Height="40" Margin="0,0,10,0">
                    <Ellipse>
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="#FACB01"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveStep}" Value="0">
                                        <Setter Property="Fill" Value="#FACB01"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ActiveStep}" Value="1">
                                        <Setter Property="Fill" Value="#34C759"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ActiveStep}" Value="2">
                                        <Setter Property="Fill" Value="#34C759"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="1" Foreground="White" FontSize="16" FontWeight="Bold" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Panel.ZIndex="1"/>
                </Grid>
                <TextBlock Text="Tải file" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Step 2 -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Grid Width="40" Height="40" Margin="0,0,10,0">
                    <Ellipse>
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="#E0E0E0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveStep}" Value="1">
                                        <Setter Property="Fill" Value="#FACB01"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ActiveStep}" Value="2">
                                        <Setter Property="Fill" Value="#34C759"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="2" Foreground="White" FontSize="16" FontWeight="Bold" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Panel.ZIndex="1"/>
                </Grid>
                <TextBlock Text="Kiểm tra dữ liệu" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Step 3 -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Grid Width="40" Height="40" Margin="0,0,10,0">
                    <Ellipse>
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="#E0E0E0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ActiveStep}" Value="2">
                                        <Setter Property="Fill" Value="#FACB01"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="3" Foreground="White" FontSize="16" FontWeight="Bold" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Panel.ZIndex="1"/>
                </Grid>
                <TextBlock Text="Xác nhận và Import" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Error Alert -->
        <Border Grid.Row="2" Background="#FFEBE9" BorderBrush="#FF3B30" BorderThickness="1" 
                CornerRadius="4" Padding="10" Margin="0,0,0,15"
                Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="❌" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding ErrorMessage}" Foreground="#FF3B30" TextWrapping="Wrap" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Border Grid.Row="3" Style="{StaticResource CardStyle}" Padding="20">
            <Grid>
                <!-- Step 0: Upload File -->
                <StackPanel Visibility="{Binding IsStep0, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Button Content="TẢI XUỐNG FILE MẪU" 
                            Background="White" Foreground="#FACB01" 
                            BorderBrush="#FACB01" BorderThickness="2"
                            FontSize="14" FontWeight="Bold"
                            Padding="20,12"
                            Command="{Binding DownloadTemplateCommand}"
                            Margin="0,0,0,15"
                            Height="45" Cursor="Hand"/>

                    <Button Content="TẢI LÊN FILE EXCEL" 
                            Background="#FACB01" Foreground="#003A70" 
                            BorderThickness="0"
                            FontSize="14" FontWeight="Bold"
                            Padding="20,12"
                            Command="{Binding UploadFileCommand}"
                            Height="45" Cursor="Hand"/>

                    <!-- Loading -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,30,0,0"
                               Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="#FACB01"/>
                        <TextBlock Text="Đang xử lý..." FontSize="14" Foreground="#666" Margin="0,15,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <!-- Step 1: Validating -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="{Binding IsStep1, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="#FACB01"/>
                    <TextBlock FontSize="14" Foreground="#666" Margin="0,15,0,0" HorizontalAlignment="Center">
                        <Run Text="Đang kiểm tra"/>
                        <Run Text="{Binding TotalStudents, Mode=OneWay}"/>
                        <Run Text=" sinh viên..."/>
                    </TextBlock>
                </StackPanel>

                <!-- Step 2: Confirm & Import -->
            <Grid Visibility="{Binding IsStep2, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Summary Alerts -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <Border Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="1" 
                            CornerRadius="4" Padding="10" Margin="0,0,10,0"
                            Visibility="{Binding HasNewStudents, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Foreground="#1976D2">
                            <Run Text="{Binding NewCount, Mode=OneWay}" FontWeight="Bold"/>
                            <Run Text=" sinh viên mới sẽ được tạo"/>
                        </TextBlock>
                    </Border>

                    <Border Background="#E8F5E9" BorderBrush="#34C759" BorderThickness="1" 
                            CornerRadius="4" Padding="10" Margin="0,0,10,0"
                            Visibility="{Binding HasExistingStudents, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Foreground="#2E7D32">
                            <Run Text="{Binding ExistsCount, Mode=OneWay}" FontWeight="Bold"/>
                            <Run Text=" sinh viên đã tồn tại"/>
                        </TextBlock>
                    </Border>

                    <Border Background="#FFEBE9" BorderBrush="#FF3B30" BorderThickness="1" 
                            CornerRadius="4" Padding="10"
                            Visibility="{Binding HasErrors, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Foreground="#C62828">
                            <Run Text="{Binding ErrorCount, Mode=OneWay}" FontWeight="Bold"/>
                            <Run Text=" lỗi"/>
                        </TextBlock>
                    </Border>
                </StackPanel>

                <!-- Validation Results Table -->
                <DataGrid Grid.Row="1" ItemsSource="{Binding ValidationResults}"
                          Style="{StaticResource ModernDataGrid}"
                          RowStyle="{StaticResource ModernDataGridRow}"
                          CellStyle="{StaticResource ModernDataGridCell}"
                          ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeader}"
                          MaxHeight="300" SelectionChanged="DataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Dòng" Binding="{Binding RowNumber}" Width="60"/>
                        <DataGridTextColumn Header="MSSV" Binding="{Binding StudentCode}" Width="100"/>
                        <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}" Width="*"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                        <DataGridTextColumn Header="Ngành" Binding="{Binding Major}" Width="150"/>

                            <DataGridTemplateColumn Header="Trạng thái" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="12" Padding="8,4">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="new">
                                                        <Setter Property="Background" Value="#2196F3"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="exists">
                                                        <Setter Property="Background" Value="#34C759"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="error">
                                                        <Setter Property="Background" Value="#FF3B30"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding StatusText}" Foreground="White" FontWeight="SemiBold" FontSize="11" HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            </Grid>
        </Border>

        <!-- Actions -->
        <Grid Grid.Row="4" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Làm lại" 
                    Background="White" Foreground="#666" 
                    BorderBrush="#E0E0E0" BorderThickness="1"
                    FontSize="13" FontWeight="SemiBold"
                    Padding="15,10"
                    Command="{Binding ResetCommand}"
                    Visibility="{Binding IsStep2, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Width="120"
                    HorizontalAlignment="Left" Cursor="Hand"/>

            <Button Grid.Column="1" 
                    Content="{Binding ImportButtonText}" 
                    Background="#FACB01" Foreground="#003A70" 
                    BorderThickness="0"
                    FontSize="14" FontWeight="Bold"
                    Padding="20,12"
                    Command="{Binding ImportCommand}"
                    IsEnabled="{Binding CanImport}"
                    Visibility="{Binding IsStep2, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Width="200" Cursor="Hand"/>
        </Grid>
    </Grid>
</UserControl>

