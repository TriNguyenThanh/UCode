<UserControl x:Class="UCode.Desktop.Controls.DatasetManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Datasets &amp; Test Cases" 
                       FontSize="18" FontWeight="Bold" Foreground="#191970" VerticalAlignment="Center"/>

            <Button Grid.Column="1" Content="+ ThÃªm Dataset" 
                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding OpenDatasetDialogCommand}"
                    CommandParameter="{x:Null}"
                    Padding="15,8"/>
        </Grid>

        <!-- Datasets Display -->
        <Grid Grid.Row="1">
            <!-- Empty State -->
            <Border Background="#FFF3CD" BorderBrush="#FF9500" BorderThickness="1" 
                    CornerRadius="4" Padding="20" 
                    Visibility="{Binding HasNoDatasets, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="âš " Foreground="#FF9500" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="ChÆ°a cÃ³ dataset nÃ o. Nháº¥n 'ThÃªm Dataset' Ä‘á»ƒ táº¡o test cases." 
                               Foreground="#856404" FontSize="14" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Datasets Grid -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                         Visibility="{Binding HasDatasets, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ItemsControl ItemsSource="{Binding Datasets}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CardStyle}" Width="380" Margin="0,0,15,15" Padding="20">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Header -->
                                    <Grid Grid.Row="0" Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" Foreground="#1D1D1F" Margin="0,0,0,8">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#1D1D1F"/>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <Border CornerRadius="12" Padding="8,4" HorizontalAlignment="Left">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Kind}" Value="SAMPLE">
                                                                <Setter Property="Background" Value="#34C759"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Kind}" Value="PUBLIC">
                                                                <Setter Property="Background" Value="#007AFF"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Kind}" Value="PRIVATE">
                                                                <Setter Property="Background" Value="#FF9500"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Kind}" Value="OFFICIAL">
                                                                <Setter Property="Background" Value="#FF3B30"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Foreground="White" FontWeight="SemiBold" FontSize="11">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Kind}" Value="SAMPLE">
                                                                    <Setter Property="Text" Value="Test máº«u"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Kind}" Value="PUBLIC">
                                                                    <Setter Property="Text" Value="Test cÃ´ng khai"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Kind}" Value="PRIVATE">
                                                                    <Setter Property="Text" Value="Test riÃªng"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Kind}" Value="OFFICIAL">
                                                                    <Setter Property="Text" Value="Test chÃ­nh thá»©c"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Test Case Count -->
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                                        <TextBlock Text="âœ“" Foreground="#34C759" FontSize="14" Margin="0,0,5,0" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#34C759"/>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Foreground="#666" FontSize="13">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#666"/>
                                                </Style>
                                            </TextBlock.Style>
                                            <Run Text="{Binding TestCases.Count, Mode=OneWay}"/>
                                            <Run Text=" test case(s)"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Actions -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
                                        <Button Content="âœ Sá»­a" 
                                                Foreground="#007bff"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Padding="0,5,15,5"
                                                Command="{Binding DataContext.OpenDatasetDialogCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <Button Content="ðŸ—‘ XÃ³a" 
                                                Foreground="#FF3B30"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Padding="0,5,0,5"
                                                Command="{Binding DataContext.DeleteDatasetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding DatasetId}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>

