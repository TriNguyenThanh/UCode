<UserControl x:Class="UCode.Desktop.Controls.VisualSelectTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Description -->
        <TextBlock Grid.Row="0" Text="Chá»n sinh viÃªn tá»« danh sÃ¡ch Ä‘á»ƒ thÃªm vÃ o lá»›p" 
                   Foreground="#666" FontSize="13" Margin="0,0,0,15"/>

        <!-- Filters -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Padding="30,8,8,8" FontSize="13" Height="36"
                         x:Name="SearchTextBox"/>
                <TextBlock IsHitTestVisible="False" Text="ðŸ” TÃªn, MSSV, hoáº·c Email" 
                           Foreground="#999" Padding="10,10,0,0" FontSize="13"
                           Visibility="{Binding ElementName=SearchTextBox, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>

            <ComboBox Grid.Column="2" 
                      SelectedValue="{Binding YearFilter, Mode=TwoWay}"
                      ItemsSource="{Binding Years}"
                      DisplayMemberPath="Label"
                      SelectedValuePath="Value"
                      FontSize="13" Height="36"/>

            <Grid Grid.Column="4">
                <TextBox Text="{Binding MajorFilter, UpdateSourceTrigger=PropertyChanged}"
                         Padding="30,8,8,8" FontSize="13" Height="36"
                         x:Name="MajorTextBox"/>
                <TextBlock IsHitTestVisible="False" Text="NgÃ nh há»c" 
                           Foreground="#999" Padding="10,10,0,0" FontSize="13"
                           Visibility="{Binding ElementName=MajorTextBox, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>

            <ComboBox Grid.Column="6" 
                      SelectedValue="{Binding StatusFilter, Mode=TwoWay}"
                      SelectedValuePath="Tag"
                      FontSize="13" Height="36">
                <ComboBoxItem Content="Táº¥t cáº£" Tag="" IsSelected="True"/>
                <ComboBoxItem Content="âœ“ Active" Tag="Active"/>
                <ComboBoxItem Content="â—‹ Inactive" Tag="Inactive"/>
            </ComboBox>
        </Grid>

        <!-- Error Alert -->
        <Border Grid.Row="2" Background="#FFEBE9" BorderBrush="#FF3B30" BorderThickness="1" 
                CornerRadius="4" Padding="10" Margin="0,0,0,15"
                Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="âŒ" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding ErrorMessage}" Foreground="#FF3B30" TextWrapping="Wrap" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Students Table -->
        <Border Grid.Row="3" Style="{StaticResource CardStyle}" Padding="0">
            <Grid>
                <!-- Loading State -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="#FACB01"/>
                    <TextBlock Text="Äang táº£i..." FontSize="14" Foreground="#666" Margin="0,15,0,0" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Empty State -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="{Binding HasNoStudents, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="ðŸ“‹" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="KhÃ´ng cÃ³ sinh viÃªn available" 
                               Foreground="#999" FontSize="14" 
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- DataGrid -->
                <DataGrid ItemsSource="{Binding FilteredStudents}"
                          Style="{StaticResource ModernDataGrid}"
                          RowStyle="{StaticResource ModernDataGridRow}"
                          CellStyle="{StaticResource ModernDataGridCell}"
                          ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeader}"
                          Visibility="{Binding HasStudents, Converter={StaticResource BooleanToVisibilityConverter}}"
                          MouseLeftButtonUp="DataGrid_MouseLeftButtonUp">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="60">
                            <DataGridTemplateColumn.Header>
                                <CheckBox IsChecked="{Binding DataContext.AllSelected, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                          Style="{StaticResource SelectionCheckBox}"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Style="{StaticResource SelectionCheckBox}"
                                              Click="CheckBox_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTextColumn Header="Há» vÃ  tÃªn" Binding="{Binding FullName}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Medium"/>
                                    <Setter Property="Foreground" Value="#333"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="MSSV" Binding="{Binding StudentCode}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontFamily" Value="Consolas"/>
                                    <Setter Property="Foreground" Value="#666"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="220">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#666"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="NgÃ nh" Binding="{Binding Major}" Width="180">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#666"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="NÄƒm" Binding="{Binding EnrollmentYear}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#666"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTemplateColumn Header="Tráº¡ng thÃ¡i" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="12" Padding="10,4" HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Active">
                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Inactive">
                                                        <Setter Property="Background" Value="#F5F5F5"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock FontWeight="SemiBold" FontSize="11">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Active">
                                                            <Setter Property="Text" Value="âœ“ Active"/>
                                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Inactive">
                                                            <Setter Property="Text" Value="â—‹ Inactive"/>
                                                            <Setter Property="Foreground" Value="#9E9E9E"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Pagination + Action -->
        <Grid Grid.Row="4" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Pagination Info -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Hiá»ƒn thá»‹:" Foreground="#666" FontSize="13" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox SelectedValue="{Binding PageSize, Mode=TwoWay}" 
                          SelectedValuePath="Tag" Width="70" Height="36" FontSize="13">
                    <ComboBoxItem Content="10" Tag="10" IsSelected="True"/>
                    <ComboBoxItem Content="25" Tag="25"/>
                    <ComboBoxItem Content="50" Tag="50"/>
                </ComboBox>
                <TextBlock VerticalAlignment="Center" Margin="15,0,15,0" Foreground="#666" FontSize="13">
                    <Run Text="{Binding PaginationText, Mode=OneWay}"/>
                </TextBlock>
                <Button Content="â®" 
                        Command="{Binding PreviousPageCommand}" 
                        Style="{StaticResource PaginationButton}"
                        Margin="0,0,5,0"
                        IsEnabled="{Binding CanGoPrevious}"/>
                <Button Content="â¯" 
                        Command="{Binding NextPageCommand}" 
                        Style="{StaticResource PaginationButton}"
                        IsEnabled="{Binding CanGoNext}"/>
            </StackPanel>

            <!-- Action -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Border Background="#F0F7FF" CornerRadius="6" Padding="12,8" Margin="0,0,15,0">
                    <TextBlock VerticalAlignment="Center" Foreground="#1976D2" FontSize="13">
                        <Run Text="ÄÃ£ chá»n:"/>
                        <Run Text="{Binding SelectedCount, Mode=OneWay}" FontWeight="Bold" FontSize="14"/>
                        <Run Text=" sinh viÃªn"/>
                    </TextBlock>
                </Border>
                <Button Content="{Binding AddButtonText}" 
                        Command="{Binding AddStudentsCommand}"
                        IsEnabled="{Binding CanAddStudents}"
                        Style="{StaticResource PrimaryButton}"
                        Padding="24,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>

