<UserControl x:Class="UCode.Desktop.Controls.VisualSelectTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Description -->
        <TextBlock Grid.Row="0" Text="Chá»n sinh viÃªn tá»« danh sÃ¡ch Ä‘á»ƒ thÃªm vÃ o lá»›p" 
                   Foreground="#666" FontSize="13" Margin="0,0,0,15"/>

        <!-- Filters -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" 
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     mah:TextBoxHelper.Watermark="ðŸ” TÃªn, MSSV, hoáº·c Email"
                     Padding="8"/>

            <ComboBox Grid.Column="2" 
                      SelectedItem="{Binding YearFilter, Mode=TwoWay}"
                      ItemsSource="{Binding Years}"
                      DisplayMemberPath="Label"
                      SelectedValuePath="Value">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Label}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBox Grid.Column="4" 
                     Text="{Binding MajorFilter, UpdateSourceTrigger=PropertyChanged}"
                     mah:TextBoxHelper.Watermark="NgÃ nh"
                     Padding="8"/>

            <ComboBox Grid.Column="6" 
                      SelectedItem="{Binding StatusFilter, Mode=TwoWay}">
                <ComboBoxItem Content="Tráº¡ng thÃ¡i" IsSelected="True"/>
                <ComboBoxItem Content="Active"/>
                <ComboBoxItem Content="Inactive"/>
            </ComboBox>
        </Grid>

        <!-- Error Alert -->
        <Border Grid.Row="2" Background="#FFEBE9" BorderBrush="#FF3B30" BorderThickness="1" 
                CornerRadius="4" Padding="10" Margin="0,0,0,15"
                Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="âŒ" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding ErrorMessage}" Foreground="#FF3B30" TextWrapping="Wrap" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Students Table -->
        <Border Grid.Row="3" Style="{StaticResource CardStyle}" Padding="0">
            <Grid>
                <!-- Loading State -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="#FACB01"/>
                    <TextBlock Text="Äang táº£i..." FontSize="14" Foreground="#666" Margin="0,15,0,0" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Empty State -->
                <TextBlock Text="KhÃ´ng cÃ³ sinh viÃªn available" 
                           Foreground="#999" FontSize="14" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="{Binding HasNoStudents, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <!-- DataGrid -->
                <DataGrid ItemsSource="{Binding FilteredStudents}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          RowBackground="White"
                          AlternatingRowBackground="#F9F9F9"
                          BorderThickness="0"
                          Visibility="{Binding HasStudents, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Width="50" Binding="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <DataGridCheckBoxColumn.Header>
                                <CheckBox IsChecked="{Binding DataContext.AllSelected, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"/>
                            </DataGridCheckBoxColumn.Header>
                        </DataGridCheckBoxColumn>
                        
                        <DataGridTextColumn Header="Há» vÃ  tÃªn" Binding="{Binding FullName}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="MSSV" Binding="{Binding StudentCode}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontFamily" Value="Consolas"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="NgÃ nh" Binding="{Binding Major}" Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="NÄƒm vÃ o há»c" Binding="{Binding EnrollmentYear}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTemplateColumn Header="Tráº¡ng thÃ¡i" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="12" Padding="8,4" HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Active">
                                                        <Setter Property="Background" Value="#34C759"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Inactive">
                                                        <Setter Property="Background" Value="#8E8E93"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding Status}" Foreground="White" FontWeight="SemiBold" FontSize="11"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Pagination + Action -->
        <Grid Grid.Row="4" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Pagination Info -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Sá»‘ dÃ²ng má»—i trang:" Foreground="#666" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox SelectedItem="{Binding PageSize, Mode=TwoWay}" Width="80">
                    <ComboBoxItem Content="10" IsSelected="True"/>
                    <ComboBoxItem Content="25"/>
                    <ComboBoxItem Content="50"/>
                </ComboBox>
                <TextBlock VerticalAlignment="Center" Margin="15,0,0,0" Foreground="#666">
                    <Run Text="{Binding PaginationText, Mode=OneWay}"/>
                </TextBlock>
                <Button Content="â—„" Command="{Binding PreviousPageCommand}" Width="30" Margin="15,0,5,0" IsEnabled="{Binding CanGoPrevious}"/>
                <Button Content="â–º" Command="{Binding NextPageCommand}" Width="30" IsEnabled="{Binding CanGoNext}"/>
            </StackPanel>

            <!-- Action -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Foreground="#666" Margin="0,0,15,0">
                    <Run Text="ÄÃ£ chá»n:"/>
                    <Run Text="{Binding SelectedCount, Mode=OneWay}" FontWeight="Bold"/>
                    <Run Text=" sinh viÃªn"/>
                </TextBlock>
                <Button Content="{Binding AddButtonText}" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding AddStudentsCommand}"
                        IsEnabled="{Binding CanAddStudents}"
                        Width="150"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>

